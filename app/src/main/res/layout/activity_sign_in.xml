<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF7F9">


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:importantForAccessibility="yes"
        android:contentDescription="Email input field"
        android:textColorHint="@color/heartred"
        android:textColor="@color/black"
        android:backgroundTint="@color/heartred"
        />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/email"
        android:inputType="textPassword"
        android:importantForAccessibility="yes"
        android:contentDescription="Password input field"
        android:textColorHint="@color/heartred"
        android:textColor="@color/black"
        android:backgroundTint="@color/heartred"/>


    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_below="@id/password"
        android:importantForAccessibility="yes"
        android:contentDescription="Sign-in button"
        android:backgroundTint="#ED8282"/>

</RelativeLayout>
